	<insert id="insertProfile" parameterType="ProfileVo">
		<![CDATA[
			insert into profile
			values( SEQ_PROFILE_NO.nextval,
			        #{userNo},
			        #{height},
			        #{weight},
			        #{career},
			        #{major},
			        #{exp},
			        sysdate,
			        #{recently_exer},
			        #{word},
			        #{profileGymEvent},
			        #{day},
			        #{time},
			        #{address}
			        )		
					
		]]>
	</insert>
	
</mapper>