<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace= "store">

	<resultMap id ="ProductVo" type="ProductVo">
		<result column ="prod_no" property="prodNo"/>
		<result column ="sell_no" property="sellNo"/>
		<result column ="prod_cate" property="prodCate"/>
		<result column ="event_cate" property="eventCate"/>
		<result column ="prod_name" property="prodName"/>
		<result column ="prod_price" property="prodPrice"/>
		<result column ="prod_brand" property="prodBrand"/>
		<result column ="prod_desc" property="prodDesc"/>
		<result column ="prod_from" property="prodFrom"/>
		<result column ="prod_wash" property="prodWash"/>
		<result column ="prod_qual" property="prodQual"/>
		<result column ="prod_detail" property="prodDetail"/>
		<result column ="prod_detail_img_name" property="prodDetailImgName"/>
		<result column ="prod_detail_img_savename" property="prodDetailImgSavename"/>
		<result column ="prod_date" property="prodDate"/>
	</resultMap>
	
	<resultMap id ="QnaVo" type="QnaVo">
		<result column ="qna_no" property="qnaNo"/>
		<result column ="prod_no" property="prodNo"/>
		<result column ="qna_title" property="qnaTitle"/>
		<result column ="qna_content" property="qnaContent"/>
		<result column ="qna_date" property="qnaDate"/>
		<result column ="Qna_type" property="QnaType"/>
		<result column ="user_no" property="userNo"/>
		<result column ="buy_no" property="buyNo"/>  
	</resultMap>
	
	<resultMap id ="QnaimgVo" type="QnaimgVo">
		<result column ="qna_img_no" property="qnaImgNo"/>
		<result column ="qna_no" property="qnaNo"/>
		<result column ="qna_img_name" property="qnaImgName"/>
		<result column ="qna_img_savename" property="qnaImgSavename"/>
		<result column ="qna_img_type" property="qnaImgType"/>
	</resultMap>


	<!-- storeList 우선 date 기준으로 뿌리기로.. -->
	<select id="selectStoList" parameterType="String" resultType="ProductVo">
		<![CDATA[
	 		select prod.prod_no,
                   prod.sell_no,
                   prod.prod_cate,
                   prod.event_cate,
                   pimg.prod_img_savename,
                   prod.prod_brand,
                   prod.prod_name,
                   prod.prod_price,
                   prod.prod_date
            from product prod, prodimg pimg
            where prod.prod_no = pimg.prod_no
            and pimg.prod_img_type = 'main'
         ]]>
            <if test="  value != null and value !=''  ">
            	and prod.prod_name like '%' || #{search} || '%'
            </if>
        <![CDATA[   
            order by prod_date asc
		]]>
	</select>
	
	<!-- 상품상세 /정보 가져오기 -->
	<select id="selectProduct" parameterType="String" resultType="ProductVo">
		<![CDATA[
			select prod.prod_no,
				   pimg.prod_img_savename,
                   prod.prod_brand,
                   prod.prod_name,
                   prod.prod_price,
                   prod.prod_detail_img_savename,
                   prod.event_cate,
                   prod.prod_desc,
                   prod.prod_from,
                   prod.prod_wash,
                   prod.prod_qual,
                   prod.prod_date
            from product prod, prodimg pimg
            where prod.prod_no = pimg.prod_no
            and prod.prod_no = #{prod_no}
            and pimg.prod_img_type = 'main'
		]]>
	</select>

	<!-- 상품상세 /상품옵션 리스트 -->
	<select id="selectCsList" parameterType="String" resultType="com.javaex.vo.ColorsizeVo">
		<![CDATA[
			select colorsize_no,
                   prod_no,
                   prod_size,
                   color,
                   stock
            from colorsize
            where prod_no = #{prod_no}
		]]>
	</select>

	<!-- 상품상세 /리뷰게시글 리스트 -->
	<select id="selectReList" parameterType="String" resultType="ReviewVo">
		<![CDATA[
			select re.review_no,
                   re.review_title,
                   us.nickname,
                          to_char(re.review_date,'YYYY-MM-DD') review_date,
                          re.review_hit,
                          re.review_content,
                          img.review_img_savename
                   from review re, users us, (select rimg.review_img_savename,
                                                     rimg.review_no
                                              from review re, reviewimg rimg
                                              where re.review_no = rimg.review_no(+)) img
                   where re.user_no = us.user_no
                   and re.review_no = img.review_no(+)
                   and re.prod_no = #{prod_no}
                   order by review_date desc
		]]>
	</select>

	<!-- 상품상세 /qna게시글 리스트 -->
	<select id="selectQnaList" parameterType="String" resultType="QnaVo">
		<![CDATA[
			select us.nickname,
                   q.qna_no,
                   q.prod_no,
                   q.qna_title,
                   q.qna_content,
                   to_char(q.qna_date, 'YYYY-MM-DD') qna_date,
                   q.qna_type,
                   q.user_no,
                   q.buy_no,
                   qimg.qna_img_savename
            from qna q, users us, (select qimg.qna_img_savename,
                                          qimg.qna_no
                                   from qna q, qnaimg qimg
                                   where q.qna_no = qimg.qna_no(+)) qimg
            where q.user_no = us.user_no
            and q.qna_no = qimg.qna_no(+)
            and q.prod_no = #{prod_no}
            order by qna_date desc
		]]>
	</select>


	<!-- qna form /pay form 유저정보 -->
	<select id="selectUser" parameterType="int" resultType="UserVo">
		<![CDATA[
			select user_phone,
				   user_no,
       			   address,
       			   user_name 
            from users
            where user_no = #{user_no}
		]]>
	</select>
	
	<!-- qna 인서트 -->
	<!-- qnaimg가 있을 경우 거의 동시에 인서트 되는데, qnaimg에서 qna_no가 필요하므로  selectKey 사용. 우선 입력한 값의 결과값을 다음 쿼리로 바로 return 시켜준다.-->
	<insert id="qnaInsert" parameterType="QnaVo">
		<selectKey keyProperty="qna_no" resultType="Int" order="BEFORE">
			select SEQ_QNA_NO.nextval from dual
		</selectKey>
		<![CDATA[
			insert into qna
            values(
                #{qna_no},
                #{prod_no},
                #{qna_title},
                #{qna_content},
                sysdate,
                #{qna_type,jdbcType=VARCHAR},
                #{user_no},
                #{buy_no,jdbcType=VARCHAR}
            )
		]]>
	</insert>
	
	<!-- qnaimg 인서트 -->
	<insert id="qnaimgInsert" parameterType="QnaimgVo">
		<![CDATA[
			insert into qnaimg
            values(
                SEQ_QNA_IMG_NO.nextval,
                #{qna_no},
                #{qna_img_name},
                #{qna_img_savename},
                #{qna_img_type}
            )
		]]>
	</insert>

	<!-- review 인서트 -->
	<insert id="reviewInsert" parameterType="ReviewVo">
		<selectKey keyProperty="review_no" resultType="Int" order="BEFORE">
			select SEQ_REVIEW_NO.nextval from dual
		</selectKey>
		<![CDATA[
			insert into review
            values(
                #{review_no},
                #{prod_no},
                #{review_title},
                #{review_content},
                sysdate,
				#{buy_no,jdbcType=VARCHAR},
                #{user_no},
                0
            )
		]]>
	</insert>
	
	<!-- reviewimg 인서트 -->
	<insert id="reviewimgInsert" parameterType="ReviewimgVo">
		<![CDATA[
			insert into reviewimg
            values(
                SEQ_REVIEW_IMG_NO.nextval,
                #{review_no},
                #{review_img_name},
                #{review_img_savename},
                #{review_img_type}
            )
		]]>
	</insert>
	
	<!-- 바로결제시 카트에 담기 -->
	<insert id="insertCart" parameterType="ProdBuyForVo">
		<![CDATA[
			insert into cart
            values(SEQ_CART_NO.nextval, 
                   #{user_no}, 
                   #{prod_no}, 
                   #{colorsize_no}, 
                   #{count}
                   )
		]]>
	</insert>
	
	<!-- 결제하기 폼 상품리스트-->
	<select id="selectPayList" parameterType="int" resultType="ProductVo">
		<![CDATA[
			select us.user_phone,
				   us.user_name,
                   p.prod_no,
                   p.prod_brand,
                   p.prod_name,
                   p.prod_price,
                   p.event_cate,
                   p.prod_img_savename,
                   ca.count,
                   p.colorsize_no
            from cart ca, users us , (select prod.prod_no,
                                             prod.prod_brand,
                                             prod.prod_name,
                                             prod.prod_price,
                                             prod.event_cate,
                                             pimg.prod_img_savename,
                                             co.colorsize_no
                                      from product prod, colorsize co, (select prod_img_savename,
                                                                               prod_no
                                                                        from prodimg
                                                                        where prod_img_type = 'main') pimg
                                      where prod.prod_no = pimg.prod_no
                                      and prod.prod_no = co.prod_no) p
            where ca.user_no = us.user_no
            and ca.prod_no = p.prod_no
            and us.user_no = #{user_no}
		]]>
	</select>
	
	<!-- 결제하기 총액 -->
	<select id="selectTotal" parameterType="int" resultType="int">
		<![CDATA[
			select sum(prod.prod_price * ca.count) as buy_price
            from product prod, cart ca
            where prod.prod_no = ca.prod_no
		]]>
	</select>
	
	<!-- 상품결제 카트삭제 -->
	<delete id="deletePay" parameterType="int">
		<![CDATA[
			delete from cart
			where cart_no = #{cart_no}
		]]>
	</delete>
	
	<!-- 결제하기 1.buy 인서트 -->
	<insert id="insertBuy" parameterType="BuyVo">
		<selectKey keyProperty="buy_no" resultType="Int" order="BEFORE">
			select SEQ_BUY_NO.nextval from dual
		</selectKey>
		<![CDATA[
			insert into buy
            values(
                #{buy_no},
                #{user_no},
                #{buy_address},
                #{buy_ph},
                sysdate,
                #{buy_paytype},
                #{buy_price},
                '결제완료',
                #{buy_name}
            )
		]]>
	</insert>
	
	<!-- 결제하기 2.buyproduct 인서트 -->
	<insert id="insertBp" parameterType="BuyProductVo">
		<![CDATA[
			insert into buyproduct
            values(
                SEQ_BUYPROD_NO.nextval,
                #{prod_no},
                #{colorsize_no},
                null,
                null,
                '결제완료',
                #{count},
                #{buy_no},
                #{buyprod_price}
            )
		]]>
	</insert>
	
   
</mapper>